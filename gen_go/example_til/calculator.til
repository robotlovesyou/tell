!go_package "calculator"

message Add {
    addend: int
}

message Subtract {
    subtrahend: int
}

message Multiply {
    multiplicand: int
}

message Divide {
    divisor: int
}

message Result {
    value: int
}

message Empty {
}

service Calculator {
    add[Add]: Result
    subtract[Subtract]: Result
    multiply[Multiply]: Result
    divide[Divide]: Result
    read[Empty]: Result
    reset[Empty]: Result
}
